#!/usr/bin/env bash
# vim: set ft=sh:
# Author: Jacky Alcine <me@jalcine.me>
# Description: Shell script to handle the core installation of my optimal
# system.

JALCINE_GIT_ROOT="https://github.com/jalcine"

git clone git://github.com/andsens/homeshick "$HOME/.homesick/repos/homeshick"
. "$HOME/.homesick/repos/homeshick/homeshick.sh"

if [ ! -x "$HOME/.homesick/repos/dotfiles" ]; then
  for dotfile in 'gitrc' 'dotfiles' 'vimrc' 'tmuxrc'
  do
    homeshick clone $JALCINE_GIT_ROOT/$dotfile
    homeshick link $dotfile
    if [ $dotfile = "dotfiles" ]; then
      . "$HOME/.bashrc"
    fi
  done
fi

# Install my interpreters.
"$HOME/.local/bin/jalcine-shell-init"
