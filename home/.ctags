--exclude=.svn
--exclude=.git
--exclude=vendor
--exclude=bundle
--exclude=build
--exclude=out
--exclude=vendor
--c++-kinds=+p
--fields=+iaSlkKmnz
--extra=+qf
--if0=no
--totals=yes
--tag-relative=no
--excmd=mixed
--sort=foldcase

--langdef=css
--langdef=markdown
--langdef=scss
--langdef=sass
--langdef=scala

--langmap=markdown:.mkd
--langmap=markdown:.markdown
--langmap=markdown:.md
--langmap=css:.css
--langmap=scss:.scss
--langmap=php:.php
--langmap=php:.phtml
--langmap=sass:.scss
--langmap=scala:.scala

--regex-markdown=/^#[ \t]+(.*)\{?/\1/h,Heading_L1/
--regex-markdown=/^##[ \t]+(.*)\{?/\1/i,Heading_L2/
--regex-markdown=/^###[ \t]+(.*)\{?/\1/k,Heading_L3/
--regex-markdown=/^####[ \t]+(.*)\{?/\1/k,Heading_L4/
--regex-markdown=/^#####[ \t]+(.*)\{?/\1/k,Heading_L5/
--regex-markdown=/^######[ \t]+(.*)\{?/\1/k,Heading_L6/

--regex-css=/^[ \t]*\.([A-Za-z0-9_-]+)/#\1/c,class,classes/
--regex-css=/^[ \t]*#([A-Za-z0-9_-]+)/.\1/i,id,ids/
--regex-css=/^[ \t]*(([A-Za-z0-9_-]+[ \t\n,]+)+)\{/\1/t,tag,tags/
--regex-css=/^[ \t]*@media\s+([A-Za-z0-9_-]+)/\1/m,media,medias/

--php-kinds=+cf-v
--regex-php=/abstract class ([^ ]*)/\1/c/
--regex-php=/interface ([^ ]*)/\1/c/
--regex-php=/^[ \t]*trait[ \t]+([a-z0_9_]+)/\1/t,traits/i
--regex-php=/(public |static |abstract |protected |private )+function ([^ (]*)/\2/f/
--regex-php=/(^|^[^\/*]+[[:blank:]])class[[:blank:]]+([[:alpha:]_][[:alnum:]_]*)/\2/c/
--regex-php=/(^|^[^\/*]+[[:blank:]])function[[:blank:]]+&amp;?[[:blank:]]*([[:alpha:]_][[:alnum:]_]*)/\2/f/

--regex-scala=/^[ \t]*((abstract|final|sealed|implicit|lazy)[ \t]*)*(private|protected)?[ \t]*class[ \t]+([a-zA-Z0-9_]+)/\4/c,classes/
--regex-scala=/^[ \t]*((abstract|final|sealed|implicit|lazy)[ \t]*)*(private|protected)?[ \t]*object[ \t]+([a-zA-Z0-9_]+)/\4/c,objects/
--regex-scala=/^[ \t]*((abstract|final|sealed|implicit|lazy)[ \t]*)*(private|protected)?[ \t]*case class[ \t]+([a-zA-Z0-9_]+)/\4/c,case classes/
--regex-scala=/^[ \t]*((abstract|final|sealed|implicit|lazy)[ \t]*)*(private|protected)?[ \t]*case object[ \t]+([a-zA-Z0-9_]+)/\4/c,case objects/
--regex-scala=/^[ \t]*((abstract|final|sealed|implicit|lazy)[ \t]*)*(private|protected)?[ \t]*trait[ \t]+([a-zA-Z0-9_]+)/\4/t,traits/
--regex-scala=/^[ \t]*type[ \t]+([a-zA-Z0-9_]+)/\1/T,types/
--regex-scala=/^[ \t]*((abstract|final|sealed|implicit|lazy)[ \t]*)*def[ \t]+([a-zA-Z0-9_]+)/\3/m,methods/
--regex-scala=/^[ \t]*((abstract|final|sealed|implicit|lazy)[ \t]*)*val[ \t]+([a-zA-Z0-9_]+)/\3/l,constants/
--regex-scala=/^[ \t]*((abstract|final|sealed|implicit|lazy)[ \t]*)*var[ \t]+([a-zA-Z0-9_]+)/\3/l,variables/
--regex-scala=/^[ \t]*package[ \t]+([a-zA-Z0-9_.]+)/\1/p,packages/
